{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Coinche Nights Export",
  "type": "object",
  "required": [
    "version",
    "settings",
    "players",
    "sessions"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "settings": {
      "type": "object",
      "required": [
        "theme",
        "euroPerLoss"
      ],
      "properties": {
        "theme": {
          "type": "string",
          "enum": [
            "auto",
            "light",
            "dark"
          ]
        },
        "euroPerLoss": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": true
    },
    "players": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "createdAt"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": true
      }
    },
    "sessions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "date",
          "attendance",
          "rounds"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          },
          "attendance": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "waitlist": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "rounds": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "createdAt",
                "tables"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "createdAt": {
                  "type": "string",
                  "format": "date-time"
                },
                "tables": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": [
                      "A",
                      "B"
                    ],
                    "properties": {
                      "A": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "minItems": 0,
                        "maxItems": 2
                      },
                      "B": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "minItems": 0,
                        "maxItems": 2
                      },
                      "scoreA": {
                        "type": [
                          "integer",
                          "null"
                        ]
                      },
                      "scoreB": {
                        "type": [
                          "integer",
                          "null"
                        ]
                      },
                      "winner": {
                        "type": [
                          "string",
                          "null"
                        ],
                        "enum": [
                          "A",
                          "B",
                          null
                        ]
                      },
                      "loserPaysPerPlayer": {
                        "type": "number",
                        "minimum": 0
                      },
                      "losersChargedAt": {
                        "type": [
                          "string",
                          "null"
                        ],
                        "format": "date-time"
                      },
                      "notes": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": true
                  }
                },
                "waitlistBefore": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "waitlistAfter": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}